<div class="icon-color-picker" data-controller="icon-color-picker">
  <div class="picker-container">
    <!-- Icon Picker Section -->
    <div class="icon-section">
      <h3 class="section-title">Choose Icon</h3>
      <div class="search-container">
        <input 
          type="text" 
          placeholder="Search icons..." 
          class="search-input"
          data-icon-color-picker-target="searchInput"
          data-action="input->icon-color-picker#filterIcons"
        >
      </div>
      
      <div class="icon-categories">
        <% icon_categories.each do |category| %>
          <div class="category">
            <h4 class="category-title"><%= category[:name] %></h4>
            <div class="icon-grid" data-icon-color-picker-target="iconGrid">
              <% category[:icons].each do |icon| %>
                <button 
                  class="icon-button <%= 'selected' if selected_icon == icon %>"
                  data-icon="<%= icon %>"
                  data-action="click->icon-color-picker#selectIcon"
                  title="<%= icon.humanize %>"
                >
                  <i class="fas fa-<%= icon %>"></i>
                </button>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Color Picker Section -->
    <div class="color-section">
      <h3 class="section-title">Choose Color</h3>
      <div class="color-grid">
        <% color_palette.each do |color| %>
          <button 
            class="color-button <%= 'selected' if selected_color == color[:name] %>"
            data-color="<%= color[:name] %>"
            data-action="click->icon-color-picker#selectColor"
            title="<%= color[:label] %>"
            style="background-color: <%= color[:value] %>"
          ></button>
        <% end %>
      </div>
      
      <div class="custom-color">
        <label for="custom-color-input">Custom Color:</label>
        <input 
          type="color" 
          id="custom-color-input"
          class="custom-color-input"
          data-icon-color-picker-target="customColorInput"
          data-action="change->icon-color-picker#selectCustomColor"
        >
      </div>
    </div>
  </div>

  <!-- Preview Section -->
  <div class="preview-section">
    <h3 class="section-title">Preview</h3>
    <div class="preview-container">
      <% if selected_icon %>
        <div class="preview-icon" style="color: <%= selected_color_value %>">
          <i class="fas fa-<%= selected_icon %>"></i>
        </div>
        <div class="preview-text">
          <strong>Icon:</strong> <%= selected_icon.humanize %><br>
          <strong>Color:</strong> <%= selected_color&.humanize || 'Custom' %>
        </div>
      <% else %>
        <div class="preview-placeholder">
          Select an icon and color to see preview
        </div>
      <% end %>
    </div>
  </div>
</div>

